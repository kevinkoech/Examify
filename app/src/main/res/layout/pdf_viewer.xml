<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.pdf_viewer.PdfViewer">

        <!-- toolbar -->

        <!-- pdf view -->

        <!-- progressbar : show while book is loading -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/toolbarRl"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/bg_tool_bar">

                <!-- back button -->
                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:onClick="click"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow_back" />

                <!-- textview : title -->
                <TextView
                    android:id="@+id/toolbarTitleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <!-- textview : subtitle e.g page number -->
                <TextView
                    android:id="@+id/pageNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolbarTitleTv"
                    android:layout_centerHorizontal="true"
                    android:text="N/A"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp">

                    <!-- imageButton : show dialog to download -->
                    <ImageView
                        android:id="@+id/downloadBtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:onClick="clickk"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_circle_download" />

                </RelativeLayout>

            </RelativeLayout>

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.github.barteksc.pdfviewer.PDFView>

        </LinearLayout>


        <include
            android:id="@+id/loader_layout"
            layout="@layout/loader_layout"
            android:layout_marginTop="?actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />


    </FrameLayout>
</layout>